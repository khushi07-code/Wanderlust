<%- layout("/layouts/boilerplate") %>
<body>

    <style>
        #filters{
            display:flex;
            flex-wrap: wrap;
        }
        .filter{
            text-align: center;
            margin-top:1.5rem;
            margin-right: 2rem;
            opacity:0.7
        }
        .filter:hover{
            opacity: 1;
            cursor:pointer
        }
        .filter p{
            font-size: 0.8rem;
            color:black;
        }
        .filter a{
            text-decoration: none;
        }
        .filter i{
            color:black;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 15px;
            height:3.10rem;
            padding:1rem;
            margin-left:1rem;
            display: flex;
            align-items: center;
            margin-top:1.2rem;
        }
        .tax-info{
            display:none;
        }

    </style>

    <!-- filter ui -->
    <div id="filters">
        <div class="filter">
            <a href="/listing?category=trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listing?category=room">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a> 
        </div>
        <div class="filter">
            <a href="/listing?category=iconis city">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconis Cities</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listing?category=castle">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>castles</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listing?category=amazing pool">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing pools</p>
            </a>
        </div>
        <div class="filter  d-sm-none d-md-none d-lg-block ">
            <a href="/listing?category=amazing view">
                <div><i class="fa-solid fa-sun-plant-wilt"></i></div>
                <p>Amazing views</p>
            </a>
        </div>
        <div class="filter  d-sm-none d-md-none d-lg-block ">
            <a href="/listing?category=mountain">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountain</p>
            </a>
        </div>
        <div class="filter d-sm-none d-md-none d-lg-block">
            <a href="/listing?category=camp">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>camping</p>
            </a>
        </div>
        <div class="filter d-sm-none  d-md-none d-lg-block">
            <a href="/listing?category=farm">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </a>
        </div>
        <div class="filter  d-sm-none  d-md-none d-lg-block">
            <a href="/listing?category=arctic">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </a>
        </div>
        <div class="filter  d-sm-none  d-md-none d-lg-block">
            <a href="/listing?category=boat">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </a>
        </div>
          <div class="filter  d-sm-none  d-md-none d-lg-block">
            <a href="/listing?category=dom">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Doms</p>
            </a>
        </div>
        
    
        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>


    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 ">
        <%for(listing of listings){%>
            <a href="/listing/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b><br>
                            &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
   
</body> 

<script>
    let taxes_switch=document.getElementById("flexSwitchCheckDefault");
    taxes_switch.addEventListener("click",()=>{
        let taxinfo=document.getElementsByClassName("tax-info");
        for(info of taxinfo){
            if(info.style.display!="inline"){
                info.style.display="inline";
            }else{
                info.style.display="none";
            }
        }
    });
</script>